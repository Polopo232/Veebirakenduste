<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">

</head>
<body>
<%- include('partials/header') %>

<div class="container mt-4">
    <div class="card p-4 shadow-sm">
        <h1 class="mb-4">Lisa uudis</h1>

        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <ul class="mb-0">
                    <% errors.forEach(err => { %>
                        <li><%= err.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/news/create" method="POST" onsubmit="return confirm('Oled kindel, et soovid salvestada uudise?');">
            <div class="mb-3">
                <label for="title" class="form-label">Pealkiri</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= values.title || '' %>" required>
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Sisu</label>
                <textarea class="form-control" id="content" name="content" rows="6" required><%= values.content || '' %></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/" class="btn btn-danger" onclick="return confirm('Oled kindel, et soovid lahkuda ilma salvestamata?');">Tagasi</a>
                <button type="submit" class="btn btn-primary">Salvesta</button>
            </div>
        </form>
    </div>
</div>

</body>
</html>
