<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">

</head>
<body>
<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>KÃµik uudised</h1>
        <% if (user) { %>
            <a href="/news/create" class="btn btn-success">+ Lisa uudis</a>
        <% } %>
    </div>

    <% if (msg === 'deleted') { %>
        <div class="alert alert-success">Uudis kustutatud</div>
    <% } %>
    <% if (msg === 'delete_failed') { %>
        <div class="alert alert-danger">Uudise kustutamine ebaÃµnnestus</div>
    <% } %>

    <div class="row">
        <% news.forEach(n => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= n.title %></h5>
                        <p class="card-text text-truncate" style="max-height: 4.5em; overflow: hidden;">
                            <%= n.content %>
                        </p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a href="/news/<%= n.id %>" class="btn btn-sm btn-primary">Vaata</a>
                            <div class="btn-group">
                                <% if (user) { %>
                                    <a href="/news/<%= n.id %>/edit" class="btn btn-sm btn-warning">Muuda</a>
                                    <form action="/news/<%= n.id %>/delete" method="POST" style="display:inline;"
                                          onsubmit="return confirm('Oled kindel?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Kustuta</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>



</body>
</html>
